<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <com.mancj.materialsearchbar.MaterialSearchBar android:layout_height="60dp" android:layout_width="0dp"
                                                   android:id="@+id/searchBar"
                                                   android:layout_marginEnd="8dp"
                                                   app:layout_constraintEnd_toEndOf="parent"
                                                   app:layout_constraintStart_toStartOf="parent"
                                                   android:layout_marginStart="8dp"
                                                   app:layout_constraintTop_toTopOf="parent"
                                                   android:layout_marginTop="8dp">

    </com.mancj.materialsearchbar.MaterialSearchBar>

    <ListView
            android:layout_width="0dp"
            android:id="@+id/listViewHome"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="48dp" app:layout_constraintBottom_toTopOf="@+id/recyvlerviewHome"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/searchBar"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyvlerviewHome"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:padding="4dp"
            android:scrollbars="vertical"
            android:background="@android:color/darker_gray" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/listViewHome"/>
</android.support.constraint.ConstraintLayout>