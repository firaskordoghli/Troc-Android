<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" tools:layout_editor_absoluteY="25dp">

    <android.support.constraint.ConstraintLayout
            android:background="#B40037"
            android:layout_width="0dp"
            android:layout_height="214dp"
            android:id="@+id/relativeLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
    >

        <ImageView
                android:layout_width="171dp"
                android:layout_height="176dp" app:srcCompat="@drawable/profiluser"
                android:id="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"/>
        <TextView
                android:text="Nom d'utilisateur"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/textViewUserName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="8dp"/>
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
            android:background="#e5e5e5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="56dp"
            android:id="@+id/linearLayout">
        <LinearLayout
                android:id="@+id/mesAnnonces"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="right|center_vertical">
            <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp" app:srcCompat="@drawable/annonceuser"
                    android:id="@+id/imageView6" android:layout_weight="1"/>
            <TextView
                    android:layout_margin="5dp"
                    android:text="Mes annonces"
                    android:textSize="16dp"
                    android:layout_width="242dp"
                    android:layout_height="wrap_content" android:id="@+id/textView32" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/favoris"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="right|center_vertical">
            <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp" app:srcCompat="@drawable/favorisuser"
                    android:id="@+id/imageView7" android:layout_weight="1"/>
            <TextView
                    android:layout_margin="5dp"
                    android:text="Mes articles favoris"
                    android:textSize="16dp"
                    android:layout_width="242dp"
                    android:layout_height="wrap_content" android:id="@+id/textView33" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/modifierProfil"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="right|center_vertical">
            <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp" app:srcCompat="@drawable/profiluser"
                    android:id="@+id/imageView9" android:layout_weight="1"/>
            <TextView
                    android:layout_margin="5dp"
                    android:text="Modifer le profil"
                    android:textSize="16dp"
                    android:layout_width="242dp"
                    android:layout_height="wrap_content" android:id="@+id/textView35" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/deconnection"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="right|center_vertical">
            <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp" app:srcCompat="@drawable/deconnectionuser"
                    android:id="@+id/imageView8" android:layout_weight="1"/>
            <TextView
                    android:layout_margin="5dp"
                    android:text="Deconnection"
                    android:textSize="16dp"
                    android:layout_width="242dp"
                    android:layout_height="wrap_content" android:id="@+id/textView34" android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
            android:text="Adresse e-mail :"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView36" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout3"/>
    <TextView
            android:text="TextView"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView37" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView36" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Numéro de téléphone :"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView38" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView37" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="TextView"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView39" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView38" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
    />


</android.support.constraint.ConstraintLayout>